    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: main",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            // "args": "${command:pickArgs}"
            "args": [
                "--model_type", "OpenAIModel",
                "--openai_api_key", "$env:OPENAI_API_KEY",
                "--file_format", "markdown",
                "--book", "tests/test.pdf",  
                "--openai_model", "gpt-4"
            ]
        }
   
    ]
}